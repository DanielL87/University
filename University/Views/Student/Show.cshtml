@{
  Layout = "_Layout";
}

<h2>Details of @Model["student"].GetName()</h2>

<ul>
<li>Student Id#: @Model["student"].GetId()</li>
<li>Enrollment Date: @Model["student"].GetDate()</li>
</ul>

<h2>List of courses this student is currently taking: </h2>
@foreach(var course in Model["courses"])
{
    <li>@course.GetName()</li>
}

<form action="/students/@Model["student"].GetId()" method="post">
    <select name="courseId" >
            @foreach(var course in @Model["allCourses"])
            {
                <option class="dropdown-item"value=@course.GetId()>@course.GetName()</option>
            }
    </select>
     <button class="btn btn-primary btn-lg" type="submit">Add</button>
</form>

<h3><a href="/students">Back to student list</a></h3>
<h3><a href="/">Back to Home page</a></h3>

